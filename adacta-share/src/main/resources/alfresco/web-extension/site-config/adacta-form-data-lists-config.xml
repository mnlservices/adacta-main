<alfresco-config>

	<!-- CATEGORY -->

	<config evaluator="model-type" condition="adadl:categoryItem">
		<forms>
			<form>
				<field-visibility>
					<show id="adadl:value" />
					<show id="adadl:description" />
				</field-visibility>

				<appearance>
					<field id="adadl:value" mandatory="true" />
					<field id="adadl:description" mandatory="true" />
				</appearance>
			</form>
			<form id="datagrid">
				<field-visibility>
					<show id="adadl:value" />
					<show id="adadl:description" />
					<show id="cm:modified" />
					<show id="cm:modifier" />
				</field-visibility>
			</form>
		</forms>
	</config>

